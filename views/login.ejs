<% include partials/head %>
<main class="container">
    <h1><%= title %></h1>
    <% include partials/flashMessages %>
    <% if (developmentUser && developmentPassword) { %>
        <div class="alert alert-secondary" role="alert">
            <strong>Development Notice</strong><br />
            To login with a dummy user, use
            <code><%= developmentUser.email %></code> with password
            <code><%= developmentPassword %></code>.
        </div>
    <% } %>
    <div class="col-md-6 offset-md-3">
        <form method="POST" action="/login">
            <div class="form-group row">
                <label for="usernameInput" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                    <input type="email" name="username" id="usernameInput" class="form-control">
                </div>
            </div>
            <div class="form-group row">
                <label for="passwordInput" class="col-sm-2 col-form-label">Password</label>
                <div class="col-sm-10">
                    <input type="password" name="password" id="passwordInput" class="form-control">
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
    </div>
</main>
<% include partials/scripts %>
<% include partials/footer %>
