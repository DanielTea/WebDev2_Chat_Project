<% include partials/head %>
<% include partials/nav %>
<main class="container">
    <% include partials/flashMessages %>
    <h1>Search results</h1>
    <div class="lead">Here are the results for "<%= searchQuery %>"</div>
    <hr />
    <div class="row">
        <div class="col-sm-3 nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
            <a class="nav-link active" id="v-pills-users-tab" data-toggle="pill" href="#v-pills-users" role="tab" aria-controls="v-pills-users" aria-selected="true">Users</a>
            <a class="nav-link" id="v-pills-tags-tab" data-toggle="pill" href="#v-pills-tags" role="tab" aria-controls="v-pills-tags" aria-selected="false">Tags</a>
            <a class="nav-link" id="v-pills-chats-tab" data-toggle="pill" href="#v-pills-chats" role="tab" aria-controls="v-pills-chats" aria-selected="false">Chats</a>
        </div>
        <div class="col-sm-9 tab-content" id="v-pills-tabContent">
            <div class="tab-pane fade show active" id="v-pills-users" role="tabpanel" aria-labelledby="v-pills-users-tab">
                <div class="card-columns">
                    <% users.forEach(user => { %>
                    <a href="/users/<%= user._id %>">
                        <div class="card">
                            <% if (user.pictureUrl) { %><img class="card-img-top" src="<%= user.pictureUrl %>"><% } %>
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= user.firstName %><%= user.lastName ? ' ' + user.lastName : '' %>
                                    <% var now = new Date();
                                    if(user.birthDate && now.getDay() == user.birthDate.getDay() && now.getMonth() == user.birthDate.getMonth()){
                                    %>
                                    ðŸŽ‚
                                    <% }; %>
                                </h5>

                                <% if(user.status) { %><h6 class="card-subtitle mb-2 text-muted"><%= user.status %></h6><% } %>
                            </div>
                        </div>
                    </a>
                    <% }); %>
                </div>
            </div>
            <div class="tab-pane fade" id="v-pills-tags" role="tabpanel" aria-labelledby="v-pills-tags-tab">
                <div class="card-columns">
                    <% tags.forEach((tag) => { %>
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title"><%= tag.name %></h5>
                                <a href="/tags/<%= tag._id %>" class="card-link">Show Info</a>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
            <div class="tab-pane fade" id="v-pills-chats" role="tabpanel" aria-labelledby="v-pills-chats-tab">
                <ul>
                    <% chats.forEach((chat) => { %>
                        <li><%= chat.name %></li>
                    <% }); %>
                </ul>
            </div>
        </div>
    </div>



</main>
<% include partials/scripts %>
<% include partials/footer %>
